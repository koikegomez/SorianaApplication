@using SorianaApplication.Models
@model SucursalCLS
@{
    ViewBag.Title = "Nueva Sucursal";
}

<h2 class="text-center mb-3 animate__animated animate__heartBeat">AGREGAR SUCURSAL</h2>
<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card my-4 animate__animated animate__fadeInLeft border-secondary rounded">
            <div class="card-body">
                @using (Html.BeginForm("AddSucursal", "Sucursal", FormMethod.Post, new { @class = "needs-validation", novalidate = "novalidate" }))
                {
                    <div class="form-floating mb-3">
                        @Html.EditorFor(p => p.nombre, new { htmlAttributes = new { @class = "form-control animate__animated animate__bounceInRight", required = "required" } })
                        @Html.LabelFor(p => p.nombre, new { @class = "animate__animated animate__bounceInLeft" })
                        <small class="form-text text-muted animate__animated animate__fadeInLeft">Ingrese el nombre completo de la sucursal</small>
                        @Html.ValidationMessageFor(p => p.nombre, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-floating mb-3">
                        @Html.EditorFor(p => p.direccion, new { htmlAttributes = new { @class = "form-control animate__animated animate__bounceInRight", required = "required" } })
                        @Html.LabelFor(p => p.direccion, new { @class = "animate__animated animate__bounceInLeft" })
                        <small class="form-text text-muted animate__animated animate__fadeInLeft">Ingrese la dirección completa de la sucursal</small>
                        @Html.ValidationMessageFor(p => p.direccion, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-floating mb-3">
                        @Html.EditorFor(p => p.telefono, new { htmlAttributes = new { @class = "form-control animate__animated animate__bounceInRight", required = "required" } })
                        @Html.LabelFor(p => p.telefono, new { @class = "animate__animated animate__bounceInLeft" })
                        <small class="form-text text-muted animate__animated animate__fadeInLeft">Ingrese el telefono</small>
                        @Html.ValidationMessageFor(p => p.telefono, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-floating mb-3">
                        @Html.EditorFor(p => p.email, new { htmlAttributes = new { @class = "form-control animate__animated animate__bounceInRight", required = "required" } })
                        @Html.LabelFor(p => p.email, new { @class = "animate__animated animate__bounceInLeft" })
                        <small class="form-text text-muted animate__animated animate__fadeInLeft">Ingrese el correo completo de la sucursal</small>
                        @Html.ValidationMessageFor(p => p.email, "", new { @class = "text-danger" })
                    </div>

                    <div class="d-grid justify-content-center mb-4 animate__animated animate__zoomInUp">
                        <input type="submit" class="btn btn-primary" value="Guardar" />
                    </div>
                }
            </div>
        </div>
    </div>
</div>